<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="sare.params">
            <block class="SARE\SAREhub\Block\EventTrackingCode" name="sare.sarehub.tracking_code" as="sare.sarehub.tracking_code" >
                <arguments>
                    <argument name="event" xsi:type="string">_cartregistration</argument>
                    <argument name="param" xsi:type="string">event</argument>
                </arguments>
            </block>
            <block class="SARE\SAREhub\Block\EventTrackingCode" name="sare.sarehub.tracking_code_second_step" as="sare.sarehub.tracking_code_second_step" >
                <arguments>
                    <argument name="event" xsi:type="string">_cartconfirm</argument>
                    <argument name="param" xsi:type="string">additional</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>


